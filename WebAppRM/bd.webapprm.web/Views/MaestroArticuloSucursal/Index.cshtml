@model List<bd.webapprm.entidades.MaestroArticuloSucursal>

<div id="content">
    <p>
        <a asp-action="Create" class="btn btn-primary">Nuevo maestro de art&iacute;culo de sucursal</a>
    </p>
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Maestros de art&iacute;culo de sucursal</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox"></div>
                        <div class="widget-body no-padding">
                            <table id="dt_basic" class="table table-striped table-bordered table-hover" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().IdSucursal)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().IdArticulo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().CodigoArticulo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Habilitado)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().ValorActual)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Minimo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Maximo)
                                        </th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Sucursal.Nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Articulo.Nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CodigoArticulo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Habilitado)
                                            </td>
                                             <td>
                                                @Html.DisplayFor(modelItem => item.ValorActual)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Minimo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Maximo)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { id = item.IdMaestroArticuloSucursal }) |
                                                <a href="javascript:void(0);" id="@item.IdMaestroArticuloSucursal" onclick="abrirVentanaConfirmacion('@item.IdMaestroArticuloSucursal')" data-url="@Url.Action("Delete", values: new { id = item.IdMaestroArticuloSucursal })" data-titulo="Eliminar" data-descripcion="&#191;Desea eliminar el Maestro Art&iacute;culo de Sucursal... ?">Eliminar</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    <script src='~/js/datatables/init.min.js'></script>
}