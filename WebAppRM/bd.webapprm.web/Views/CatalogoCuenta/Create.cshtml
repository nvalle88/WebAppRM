@model bd.webapprm.entidades.CatalogoCuenta
@{
    bool IdCatalogoCuentaHijoVisible = (bool)ViewData["IdCatalogoCuentaHijoVisible"];
}

@section css{
    <link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
}

<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-6">
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Cat&aacute;logos de Cuenta</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox"></div>
                        <div class="widget-body no-padding">
                            <form asp-action="Create" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <fieldset>
                                    @{
                                        if (IdCatalogoCuentaHijoVisible)
                                        {
                                            <div class="row">
                                                <section class="col col-4">
                                                    <label asp-for="IdCatalogoCuentaHijo"></label>
                                                </section>

                                                <section class="col col-8">
                                                    <label class="input">
                                                        <select asp-for="IdCatalogoCuentaHijo" class="form-control" asp-items="ViewBag.IdCatalogoCuentaHijo"></select>
                                                        <span asp-validation-for="IdCatalogoCuentaHijo" class="text-danger"></span>
                                                    </label>
                                                </section>
                                            </div>
                                        }
                                    }

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="Codigo"></label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <input asp-for="Codigo" class="form-control" />
                                                <span asp-validation-for="Codigo" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>
                                <footer>
                                    <span class="text-danger">@ViewData["Error"]</span>
                                    <button type="submit" class="btn btn-primary" id="btn-guardar">Guardar</button>
                                    <a asp-action="Index" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_Select2ScriptsPartial");}
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(document).ready(function () {
            Init_Select2();
        });
    </script>
}