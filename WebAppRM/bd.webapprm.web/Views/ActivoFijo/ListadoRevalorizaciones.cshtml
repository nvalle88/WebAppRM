@model List<DepreciacionActivoFijo>
@{
    var nombreTabla = "dt_basic";
}

<div id="content">
    <p>
        <a asp-action="GestionarRevalorizacion" asp-route-id="@ViewBag.IdRecepcionActivoFijoDetalle" class="btn btn-primary">Actualizar valor de revalorizaci&oacute;n</a>
    </p>
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Revalorizaciones de activos fijos</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox"></div>
                        <div class="widget-body no-padding">
                            <table id="@nombreTabla" class="table table-striped table-bordered table-hover" style="width:100%;">
                                <thead>
                                    <tr>
                                        @{await Html.RenderPartialAsync("~/Views/Shared/_VistaFiltradoText.cshtml", 2, new ViewDataDictionary(ViewData) { { "MostrarFiltradoUltimaColumna", true } });}
                                        <th id="@String.Format("th{0}{1}", nombreTabla, ThClassName.fechaRevalorizacion)">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().FechaRevalorizacion)
                                        </th>
                                        <th id="@String.Format("th{0}{1}", nombreTabla, ThClassName.valorCompra)">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().ValorCompra)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaDepreciacion)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.ValorCompra)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    <script src='~/js/datatables/initDatatableFiltrado.min.js'></script>
    <script src="~/lib/bootbox/bootbox.min.js"></script>
    <script src='~/js/activoFijo/listadoSeleccion.min.js'></script>
    <script src="~/js/activoFijo/listadoAgrupacion.min.js"></script>
}
