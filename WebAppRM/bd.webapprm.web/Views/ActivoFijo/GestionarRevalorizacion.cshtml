@model RevalorizacionActivoFijo

@section css{
    <link rel="stylesheet" href="~/lib/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-touchspin-master/src/jquery.bootstrap-touchspin.css" />
}

<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-9">
                <div class="jarviswidget jarviswidget-color-red" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Registrar Revalorizaci&oacute;n</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox"></div>
                        <div class="widget-body no-padding">
                            <span class="text-success">@ViewData["mensaje"]</span>
                            <form asp-action="GestionarRevalorizacion" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="IdRecepcionActivoFijoDetalle" value="@ViewBag.IdRecepcionActivoFijoDetalle" />
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="FechaRevalorizacion"></label>
                                        </section>
                                        <section class="col col-8">
                                            <label class="input">
                                                <input type="text" asp-for="FechaRevalorizacion" class="form-control" />
                                                <span asp-validation-for="FechaRevalorizacion" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="ValorCompraAnterior"></label>
                                        </section>
                                        <section class="col col-8">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-usd"></i>
                                                <input asp-for="ValorCompraAnterior" disabled="disabled" class="form-control" />
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="ValorCompra"></label>
                                        </section>
                                        <section class="col col-8">
                                            <label class="input">
                                                <input asp-for="ValorCompra" class="form-control touchspin_tasa" />
                                                <span asp-validation-for="ValorCompra" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>
                                <footer>
                                    <span class="text-danger">@ViewData["Error"]</span>
                                    <button type="submit" class="btn btn-primary" id="btn-guardar">Guardar</button>
                                    <a asp-action="ListadoRevalorizaciones" asp-route-id="@ViewBag.IdRecepcionActivoFijoDetalle" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_DatetimePickerScriptsPartial");}
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src='~/lib/bootstrap-touchspin-master/src/jquery.bootstrap-touchspin.js'></script>
    <script src="~/js/activoFijo/revalorizacion.js"></script>
}