@model List<ArticuloSeleccionado>

@{ 
    string nombreTabla = "tableDetallesArticulos";
}
<div class="table-responsive">
    <table id="@nombreTabla" class="table table-striped table-bordered table-hover" style="width:100%;">
        <thead>
            <tr>
                @{ await Html.RenderPartialAsync("~/Views/Shared/_VistaFiltradoText.cshtml", 8, new ViewDataDictionary(ViewData) { { "MostrarFiltradoUltimaColumna", true } });}
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Articulo.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Articulo.SubClaseArticulo.ClaseArticulo.IdTipoArticulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Articulo.SubClaseArticulo.IdClaseArticulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Articulo.IdSubClaseArticulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Articulo.IdUnidadMedida)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Articulo.Modelo.IdMarca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Articulo.IdModelo)
                </th>
                <th class="hide"></th>
                <th class="hide"></th>
                <th class="hide"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @{ 
                        await Html.RenderPartialAsync("_CheckBoxSeleccion", new ViewDataDictionary(ViewData){
                            { "Seleccionado", item.Seleccionado },
                            { "CallbackFunctionCheckBox", "CallbackFunctionCheckBoxArticulo" },
                            { "IdRecepcionActivoFijoDetalle", item.Articulo.IdArticulo }
                        });
                    }

                    <td id="@String.Format("{0}{1}NombreArticulo", nombreTabla, item.Articulo.IdArticulo)">
                        @Html.DisplayFor(modelItem => item.Articulo.Nombre)
                    </td>

                    <td id="@String.Format("{0}{1}TipoArticulo", nombreTabla, item.Articulo.IdArticulo)">
                        @Html.DisplayFor(modelItem => item.Articulo.SubClaseArticulo.ClaseArticulo.TipoArticulo.Nombre)
                    </td>

                    <td id="@String.Format("{0}{1}ClaseArticulo", nombreTabla, item.Articulo.IdArticulo)">
                        @Html.DisplayFor(modelItem => item.Articulo.SubClaseArticulo.ClaseArticulo.Nombre)
                    </td>

                    <td id="@String.Format("{0}{1}SubclaseArticulo", nombreTabla, item.Articulo.IdArticulo)">
                        @Html.DisplayFor(modelItem => item.Articulo.SubClaseArticulo.Nombre)
                    </td>

                    <td id="@String.Format("{0}{1}UnidadMedida", nombreTabla, item.Articulo.IdArticulo)">
                        @Html.DisplayFor(modelItem => item.Articulo.UnidadMedida.Nombre)
                    </td>

                    <td id="@String.Format("{0}{1}Marca", nombreTabla, item.Articulo.IdArticulo)">
                        @Html.DisplayFor(modelItem => item.Articulo.Modelo.Marca.Nombre)
                    </td>

                    <td id="@String.Format("{0}{1}Modelo", nombreTabla, item.Articulo.IdArticulo)">
                        @Html.DisplayFor(modelItem => item.Articulo.Modelo.Nombre)
                    </td>

                    <td id="@String.Format("{0}{1}Cantidad", nombreTabla, item.Articulo.IdArticulo)" class="hide">
                        <div class="input-group spinner" data-trigger="spinner" id="spinner_@item.Articulo.IdArticulo">
                            <input type="text" id="cantidad_@item.Articulo.IdArticulo" name="cantidad_@item.Articulo.IdArticulo" class="form-control" data-rule="quantity"  style="padding-left:6px !important;" />
                            <div class="input-group-addon" style="padding-left:17px !important;">
                                <a href="javascript:;" class="spin-up" data-spin="up"><i class="fa fa-caret-up"></i></a>
                                <a href="javascript:;" class="spin-down" data-spin="down"><i class="fa fa-caret-down"></i></a>
                            </div>
                        </div>
                    </td>
                    <td id="@String.Format("{0}{1}ValorUnitario", nombreTabla, item.Articulo.IdArticulo)" class="hide">
                        <label class="input">
                            <input id="valorUnitario_@item.Articulo.IdArticulo" name="valorUnitario_@item.Articulo.IdArticulo" class="form-control touchspin_tasa" onchange="calcularCostos();" />
                        </label>
                    </td>
                    <td id="@String.Format("{0}{1}ValorTotal", nombreTabla, item.Articulo.IdArticulo)" class="hide"><span id="spanValorTotal_@item.Articulo.IdArticulo">0.00</span></td>
                </tr>
            }
        </tbody>
    </table>
</div>