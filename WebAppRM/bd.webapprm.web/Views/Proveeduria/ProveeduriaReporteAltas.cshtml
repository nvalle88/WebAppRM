@model List<bd.webapprm.entidades.SolicitudProveduriaDetalle>

    @{
    ViewData["Title"] = "ReporteArticulosAltas";
    }

    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/JsBarcode-master/dist/JsBarcode.all.min.js"></script>
    <script src='~/js/site.js'></script>

    <div id="content">
        <section id="widget-grid" class="">
            <div class="row">
                <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                        <header>
                            <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                            <h2>Reportes</h2>
                        </header>
                        <div>
                            <div class="jarviswidget-editbox"></div>
                            <div class="widget-body no-padding">
                                <div class="padding-10">
                                    <br>
                                    <div class="pull-left">
                                        <h1 style="font-size:260% !important;"><i class="fa fa-file-text-o"></i> Art&iacute;culos en Alta</h1>
                                    </div>
                                    <div class="pull-right">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div>
                                                    <div class="font-md">
                                                        <strong>Fecha:&nbsp;&nbsp;&nbsp;&nbsp;</strong>
                                                        <span class="pull-right"> <i class="fa fa-calendar"></i>&nbsp;&nbsp;@DateTime.Now.ToString("dd/MM/yyyy hh:mm tt") </span>
                                                    </div>
                                                </div>
                                                <br>
                                                <div class="well well-sm  bg-color-darken txt-color-white no-border">
                                                    <div class="fa-lg">
                                                        Total de Art&iacute;culos:
                                                        <span class="pull-right"> @Model.Count </span>
                                                    </div>
                                                </div>
                                                <br>
                                                <br>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>

                                    <table id="tbReporte" class="table table-striped table-bordered table-hover" style="width:100%;">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Art&iacute;culo
                                                </th>
                                                <th>
                                                    Cantidad aprobada
                                                </th>
                                                <th>
                                                    Cantidad solicitada
                                                </th>
                                                <th>
                                                    Estado
                                                </th>
                                                <th>
                                                    Fecha de aprobada
                                                </th>
                                                <th>
                                                    Fecha de solicitud
                                                </th>
                                                <th>
                                                    Sucursal
                                                </th>
                                                <th>
                                                    M&iacute;nimo
                                                </th>
                                                <th>
                                                    M&aacute;ximo
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Articulo.Nombre)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CantidadAprobada)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CantidadSolicitada)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Estado.Nombre)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FechaAprobada)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FechaSolicitud)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelIteam => item.MaestroArticuloSucursal.Sucursal)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelIteam => item.MaestroArticuloSucursal.Minimo)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelIteam => item.MaestroArticuloSucursal.Maximo)
                                                </td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>

                                    <div class="invoice-footer">
                                        <div class="row">
                                            <div class="col-sm-7"></div>
                                            <div class="col-sm-5">
                                                <div class="invoice-sum-total pull-right">
                                                    <h3><strong>Total de Art&iacute;culos: <span class="text-success">@Model.Count</span></strong></h3>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </section>
    </div>

    @section Scripts{
    <script src="~/lib/TableTools-master/src/dataTables.tableTools.js"></script>
    <script src="~/js/proveeduria/reportesAltasBajas.js"></script>
    }
