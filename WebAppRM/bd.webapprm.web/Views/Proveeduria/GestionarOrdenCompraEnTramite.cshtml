@model OrdenCompra

@section css{
    <link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-touchspin-master/src/jquery.bootstrap-touchspin.css" />
    <link rel="stylesheet" href="~/lib/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" />
    <link rel="stylesheet" href="~/lib/jquery.spinner-master/dist/css/bootstrap-spinner.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap-fileinput/css/fileinput.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/activoFijo/recepcion.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/tableSmartForm.min.css" />
}
<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-red" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Orden de Compra</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox"></div>
                        <div class="widget-body no-padding">
                            <form asp-action="GestionarOrdenCompraEnTramite" id="checkout-form" class="smart-form" novalidate="novalidate" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                @{
                                    if (Model != null)
                                    {
                                        <input type="hidden" asp-for="IdOrdenCompra" />
                                        <input type="hidden" asp-for="IdFacturaActivoFijo" />
                                    }
                                }
                                <fieldset>
                                    <legend>Datos generales</legend>
                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="Codigo"></label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <input asp-for="Codigo" class="form-control" />
                                                <span asp-validation-for="Codigo" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="Fecha"></label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <input type="text" asp-for="Fecha" class="form-control" />
                                                <span asp-validation-for="Fecha" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <legend>Datos de factura</legend>
                                    <div class="row margin-top-25">
                                        <section class="col col-4">
                                            <label asp-for="Factura.NumeroFactura"></label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <input asp-for="Factura.NumeroFactura" class="form-control" />
                                                <span asp-validation-for="Factura.NumeroFactura" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="Factura.FechaFactura"></label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <input type="text" asp-for="Factura.FechaFactura" class="form-control" />
                                                <span asp-validation-for="Factura.FechaFactura" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <legend>Documentaci&oacute;n adicional de factura</legend>
                                    <div class="row margin-top-25">
                                        <section class="col col-12 width100">
                                            <input type="file" id="file" name="file" multiple="multiple" />
                                        </section>
                                    </div>

                                    <legend>Datos de proveedor</legend>
                                    <div class="row margin-top-25">
                                        <section class="col col-4">
                                            <label asp-for="IdProveedor"></label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="IdProveedor" class="form-control" asp-items="ViewBag.Proveedor"></select>
                                                <span asp-validation-for="IdProveedor" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div id="divDatosProveedor"></div>

                                    <legend>Detalles</legend>
                                    <p class="margin-top-10">
                                        <button type="button" class="btn btn-primary" style="padding:7px !important;margin-left:7px !important;" onclick="cargarListadoActivosFijosParaSeleccion(this)" data-funcioncallback="callBackInicializarTableListadoSeleccion" id="btnAdicionarArticulos" data-toggle="modal" data-target="#myModal">Adicionar / Eliminar Art&iacute;culos</button>
                                    </p>

                                    <div class="table-responsive">
                                        <table id="tableDetallesOrdenCompra" class="table table-striped table-bordered table-hover" style="width:100%;">
                                            <thead>
                                                @{ await Html.RenderPartialAsync("~/Views/Shared/_VistaFiltradoText.cshtml", 6);}
                                                <tr>
                                                    <th>@Html.DisplayNameFor(m => m.OrdenCompraDetalles.FirstOrDefault().Articulo.Nombre)</th>
                                                    <th>@Html.DisplayNameFor(m => m.OrdenCompraDetalles.FirstOrDefault().Articulo.IdUnidadMedida)</th>
                                                    <th>@Html.DisplayNameFor(m => m.OrdenCompraDetalles.FirstOrDefault().Cantidad)</th>
                                                    <th>@Html.DisplayNameFor(m => m.OrdenCompraDetalles.FirstOrDefault().ValorUnitario)</th>
                                                    <th>Valor total</th>
                                                    <th>Opciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    if (Model != null)
                                                    {
                                                        foreach (var item in Model.OrdenCompraDetalles)
                                                        {
                                                            <tr id="@String.Format("tableDetallesOrdenCompra{0}", item.IdArticulo)">
                                                                <td>
                                                                    @Html.DisplayFor(m => item.Articulo.Nombre)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(m => item.Articulo.UnidadMedida.Nombre)
                                                                </td>
                                                                <td>
                                                                    <div class="input-group spinner" data-trigger="spinner" id="spinner_@item.IdArticulo">
                                                                        <input type="text" id="cantidad_@item.IdArticulo" name="cantidad_@item.IdArticulo" value="@item.Cantidad" class="form-control" data-rule="quantity" style="padding-left:6px !important;" />
                                                                        <div class="input-group-addon" style="padding-left:17px !important;">
                                                                            <a href="javascript:;" class="spin-up" data-spin="up"><i class="fa fa-caret-up"></i></a>
                                                                            <a href="javascript:;" class="spin-down" data-spin="down"><i class="fa fa-caret-down"></i></a>
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                                <td id="tdValorUnitario_@item.IdArticulo">
                                                                    <label class="input">
                                                                        <input id="valorUnitario_@item.IdArticulo" name="valorUnitario_@item.IdArticulo" value="@item.ValorUnitario" class="form-control touchspin_tasa" onchange="calcularCostos();" />
                                                                    </label>
                                                                </td>
                                                                <td>
                                                                    @{
                                                                        var valorTotal = (item.Cantidad * item.ValorUnitario).ToString("N2");
                                                                    }
                                                                    <span id="spanValorTotal_@item.IdArticulo">@valorTotal</span>
                                                                </td>
                                                                <td>
                                                                    <input type="hidden" class="hiddenIdRecepcionActivoFijoDetalle" id="hIdRecepcionActivoFijoDetalle_@item.IdArticulo" name="hIdRecepcionActivoFijoDetalle_@item.IdArticulo" value="@item.IdArticulo">
                                                                    <div id="divEliminarDatosEspecificos_@item.IdArticulo" class="btnEliminarDatosEspecificos" style="display:inline;"><a href="javascript: void(0);" id="btnEliminarDatosEspecifico_@item.IdArticulo" onclick="abrirVentanaConfirmacion('btnEliminarDatosEspecifico_@item.IdArticulo')" data-funcioncallback="callBackFunctionEliminarDatoEspecifico('@item.IdArticulo')" data-titulo="Eliminar" data-descripcion="&#191; Desea eliminar el Art&iacute;culo seleccionado... ?">Eliminar</a></div>
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="invoice-footer" style="padding:10px !important;">
                                        <div class="row">
                                            <div class="col-sm-7"></div>
                                            <div class="col-sm-5">
                                                <div class="invoice-sum-total pull-right bg-color-darken txt-color-white" style="padding:5px !important;border-radius:2px !important;">
                                                    <h3>Total:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; $<span id="spanTotal">0.00</span></h3>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-lg" style="margin-left:8% !important;margin-top:30px !important;width:85% !important;">
                                            <div class="modal-content" id="modalContentDatosEspecificos">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="padding:10px !important;">
                                                        &times;
                                                    </button>
                                                    <h4 class="modal-title" id="myModalLabel" style="padding:12px !important;">Listado de Art&iacute;culos</h4>
                                                </div>
                                                <div class="modal-body" style="padding:15px !important;padding-top:10px !important;" id="modalBodyDatosEspecificos"></div>
                                                <div class="modal-footer" style="padding:15px !important;">
                                                    <button type="button" class="btn btn-default" id="btnCancelarDatosEspecificos" data-dismiss="modal" style="padding:7px !important;">Cancelar</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                                <footer>
                                    <button type="button" class="btn btn-primary" id="btn-guardar">Guardar</button>
                                    <a asp-action="ListadoOrdenCompraEntramite" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_Select2ScriptsPartial");}
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src='~/lib/bootstrap-touchspin-master/src/jquery.bootstrap-touchspin.js'></script>
    @{await Html.RenderPartialAsync("_DatetimePickerScriptsPartial");}
    <script src='~/lib/jquery.spinner-master/dist/js/jquery.spinner.min.js'></script>
    @{await Html.RenderPartialAsync("_FileInputScriptsPartial");}
    <script src='~/js/activoFijo/listadoSeleccion.min.js'></script>
    <script src="~/js/proveeduria/ordenCompra.min.js"></script>
    <script>
        var proveedorSelectResult = "@Url.Action("ProveedorResult")";
        var urlListadoActivosFijosSeleccionResult = "@Url.Action("ArticulosResult")";
    </script>
}