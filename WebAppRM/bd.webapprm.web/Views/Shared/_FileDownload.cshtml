@model ICollection<DocumentoActivoFijo>
<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Fecha)</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @{ 
            if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span class="negrita">@Html.DisplayFor(m => item.Nombre)</span>
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Fecha)
                        </td>
                        <td>
                            <a asp-action="DescargarArchivo" asp-route-id="@item.IdDocumentoActivoFijo">Descargar</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No se encontr&oacute; ninguna documentaci&oacute;n.</td>
                </tr>
            }
        }
    </tbody>
</table>